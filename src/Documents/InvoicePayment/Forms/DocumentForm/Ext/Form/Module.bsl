// CounterpartyOnChange UI event handler. The procedure repopulates line items upon a Counterparty change.
//
Procedure CounterpartyOnChange(Item)
	
	Object.CounterpartyCode = CommonUse.GetAttributeValue(Object.Counterparty, "Code");
	FillDocumentList(Object.Counterparty);
	LineItemsPaymentOnChange(Items.LineItemsPayment);
	
EndProcedure


