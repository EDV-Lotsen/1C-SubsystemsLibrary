			</UseAlways>
			<Settings xsi:type="DynamicList">
				<ManualQuery>true</ManualQuery>
				<DynamicDataRead>false</DynamicDataRead>
				<QueryText>SELECT
	CatalogIncomingEmails.Ref,
	CatalogIncomingEmails.DeletionMark,
	CatalogIncomingEmails.Predefined,
	CatalogIncomingEmails.Description,
	CatalogIncomingEmails.Date,
	CatalogIncomingEmails.Sender,
	CatalogIncomingEmails.Text,
	CatalogIncomingEmails.ContentKind,
	CatalogIncomingEmails.ID,
	CatalogIncomingEmails.Mailbox,
	ISNULL(IncomingEmailStates.Read, FALSE) AS Read
FROM
	Catalog.IncomingEmails AS CatalogIncomingEmails
		LEFT JOIN InformationRegister.IncomingEmailStates AS IncomingEmailStates
			ON IncomingEmailStates.Email = CatalogIncomingEmails.Ref</QueryText>
