	<Attributes>
		<Attribute name="List" id="1">
			<Type>
				<v8:Type>cfg:DynamicList</v8:Type>
			</Type>
			<MainAttribute>true</MainAttribute>
			<UseAlways>
				<Field>List.RequiresFilling</Field>
				<Field>List.Ref</Field>
			</UseAlways>
			<Settings xsi:type="DynamicList">
				<ManualQuery>true</ManualQuery>
				<DynamicDataRead>true</DynamicDataRead>
				<QueryText>SELECT
	CatalogWorkSchedules.Ref,
	CatalogWorkSchedules.DataVersion,
	CatalogWorkSchedules.DeletionMark,
	CatalogWorkSchedules.Predefined,
	CatalogWorkSchedules.Parent,
	CatalogWorkSchedules.IsFolder,
	CatalogWorkSchedules.Description,
	CatalogWorkSchedules.BusinessCalendar,
	CatalogWorkSchedules.FillingMethod,
	CatalogWorkSchedules.StartDate,
	CatalogWorkSchedules.EndDate,
	CatalogWorkSchedules.PeriodStartDate,
	CatalogWorkSchedules.ConsiderHolidays,
	CatalogWorkSchedules.Details,
	//CatalogWorkSchedules.DeleteCalendarType,
	CatalogWorkSchedules.PlanningHorizon,
	CatalogWorkSchedules.ScheduleOwner,
	DATEADD(&amp;CurrentDate, MONTH, CatalogWorkSchedules.PlanningHorizon) AS RequiredFillingDate,
	ScheduleData.FillDate,
	BusinessCalendarsData.FillDate AS BusinessCalendarFillDate,
	CASE
		WHEN ScheduleData.FillDate &lt; DATEADD(&amp;CurrentDate, MONTH, CatalogWorkSchedules.PlanningHorizon)
			THEN TRUE
		ELSE FALSE
	END AS RequiresFilling,
	CASE
		WHEN ScheduleData.FillDate &lt; DATEADD(&amp;CurrentDate, MONTH, CatalogWorkSchedules.PlanningHorizon)
			THEN CASE
					WHEN CatalogWorkSchedules.BusinessCalendar &lt;&gt; VALUE(Catalog.BusinessCalendars.EmptyRef)
						THEN CASE
								WHEN BusinessCalendarsData.FillDate = DATETIME(1, 1, 1)
									THEN "The business calendar is required"
								ELSE CASE
										WHEN BusinessCalendarsData.FillDate &lt; DATEADD(&amp;CurrentDate, MONTH, CatalogWorkSchedules.PlanningHorizon)
											THEN "The business calendar for the next calendar year is required"
									END
							END
					ELSE CASE
							WHEN CatalogWorkSchedules.EndDate = DATETIME(1, 1, 1)
								THEN "The schedule for the next calendar year is required"
							ELSE CASE
									WHEN CatalogWorkSchedules.EndDate &lt; DATEADD(&amp;CurrentDate, MONTH, CatalogWorkSchedules.PlanningHorizon)
										THEN "Schedule fill period is limited (see End date field)"
								END
						END
				END
		ELSE ""
	END AS PossibleReason
	FROM
	Catalog.Calendars AS CatalogWorkSchedules
		LEFT JOIN (SELECT
			CalendarSchedules.Calendar AS WorkSchedule,
			MAX(CalendarSchedules.ScheduleDate) AS FillDate
		FROM
			InformationRegister.CalendarSchedules AS CalendarSchedules
		
		GROUP BY
			CalendarSchedules.Calendar) AS ScheduleData
		ON CatalogWorkSchedules.Ref = ScheduleData.WorkSchedule
		LEFT JOIN (SELECT
			BusinessCalendarsData.BusinessCalendar AS BusinessCalendar,
			MAX(BusinessCalendarsData.Date) AS FillDate
		FROM
			InformationRegister.BusinessCalendarData AS BusinessCalendarsData
		
		GROUP BY
			BusinessCalendarsData.BusinessCalendar) AS BusinessCalendarsData
			ON CatalogWorkSchedules.BusinessCalendar = BusinessCalendarsData.BusinessCalendar</QueryText>
				<MainTable>Catalog.Calendars</MainTable>
				<ListSettings>
					<dcsset:filter>
						<dcsset:viewMode>Normal</dcsset:viewMode>
						<dcsset:userSettingID>dfcece9d-5077-440b-b6b3-45a5cb4538eb</dcsset:userSettingID>
					</dcsset:filter>
					<dcsset:order>
						<dcsset:viewMode>Normal</dcsset:viewMode>
						<dcsset:userSettingID>88619765-ccb3-46c6-ac52-38e9c992ebd4</dcsset:userSettingID>
